/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	background:#f2f2f2;
}
.tab{
	height:80rpx;
	border-bottom:solid 1px #e0e0e0;
	background:#fff;
}
.tab_item{
	width:25%;
	text-align:center;
	height:80rpx;
	line-height:80rpx;
}
.tab_this{
	color:#e83632;
	border-bottom:solid 1px #e83632;
}
.tab_item text{
	height:78rpx;
	line-height:78rpx;
	display:inline-block;
}
.sort_box{
	width:95%;
	height:100%;
	margin:20rpx auto;
	border-radius:10rpx;
	background:#fff;
	padding:20rpx 0;
}
.sort_cont{
	width:100%;
	height:172rpx;
	
}
.sort_left{
	width:72%;
	height:172rpx;
	background:#fff3f2;
	border-radius:20rpx;
}
.sort_right{
	width:28%;
	height:172rpx;
	background:#fff3f2;
	border-radius:20rpx;
}
.sort_in{
	width:90%;
	height:120rpx;
	margin:0 auto;
	border-radius:10rpx;
}
.sort_img{
	width:30%;
	display:flex;
	align-items:center;
}
.sort_img image{
	width:120rpx;
	height:120rpx;
	border-radius:10rpx;
}
.sort_txt{
	width:70%;
}
.sort_txt text{
	font-size:50rpx;
}
.submit_info{
	width:110rpx;
	height:48rpx;
	line-height:48rpx;
}
.sort_cont{
	margin-top:20rpx;
}