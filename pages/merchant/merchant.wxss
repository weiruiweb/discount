/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	background:#f2f2f2;
}
.user_banner{
	width:100%;
	height:294rpx;
	position:relative;
}
.user_banner image{
	width:100%;
	height:100%;
}
.user_box{
	position:absolute;
	left:0;
	top:0;
	height:294rpx;
	display:flex;
}
.banner_left{
	width:33%;
	height:100%;

}
.banner_right{
	width:67%;
	height:50%;
}
.user_img{
	width:140rpx;
	height:140rpx;
	border-radius:50%;
	overflow:hidden;
	margin:0px auto;
}
.credit_left{
	width:100%;
	height:100%;
	text-align:right;
}
.credit_left image{
	width:24rpx;
	height:30rpx;
	margin-right:10rpx;
}
.user{
	flex-wrap:wrap;
	background:#fff;
}
.user_module{
	width:48.5%;
	height:280rpx;
	text-align:center;
	background:#fff3f2;
	margin-bottom:3%;
}
.module_img image{
	width:80rpx;
	height:80rpx;
}
.module_img{
	height:180rpx;
	line-height:240rpx;
	overflow:hidden;
}
